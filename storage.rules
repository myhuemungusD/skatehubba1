rules_version = '2';

// Firebase Storage Security Rules for SkateHubba
// 
// Security model:
// - Profile images: authenticated users can upload/update their own
// - Spot images: authenticated users can upload, anyone can read
// - All files require authentication to write
// - Enforce file size limits and content types

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isValidImageSize() {
      // Max 5MB for images
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    // Profile images: users can only upload/update their own
    match /profiles/{userId}/{fileName} {
      allow read: if true; // Public read for profile images
      allow write: if isOwner(userId) 
                   && isValidImageType() 
                   && isValidImageSize();
    }
    
    // Spot images: authenticated users can upload, anyone can read
    match /spots/{spotId}/{fileName} {
      allow read: if true; // Public read for spot images
      allow create: if isAuthenticated() 
                    && isValidImageType() 
                    && isValidImageSize();
      allow update, delete: if isAuthenticated(); // Allow authenticated users to manage spot images
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
