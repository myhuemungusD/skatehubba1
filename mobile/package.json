{
  "name": "skatehubba-mobile",
  "version": "0.0.1",
  "private": true,
  "description": "SkateHubba mobile app (Expo) with minimal Detox E2E scaffold.",
  "scripts": {
    "e2e:build:ios": "detox build --configuration ios.sim.debug",
    "e2e:test:ios": "detox test --configuration ios.sim.debug",
    "e2e:build:android": "detox build --configuration android.emu.debug",
    "e2e:test:android": "detox test --configuration android.emu.debug",
    "e2e:smoke": "detox test --configuration ios.sim.debug --testNamePattern \"Smoke\""
  },
  "dependencies": {
    "@skatehubba/shared": "workspace:*"
  },
  "devDependencies": {
    "detox": "^20.30.0",
    "jest": "^29.7.0"
  }
}
