{
  "name": "skatehubba-monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "start": "tsx server/index.ts",
    "build": "pnpm run verify:public-env && turbo build",
    "build:ci": "pnpm install --frozen-lockfile && pnpm run verify:public-env && turbo build",
    "check": "turbo typecheck",
    "package:dist": "node scripts/assemble-dist.mjs",
    "lint": "turbo lint",
    "typecheck": "pnpm -r run typecheck",
    "e2e:client": "pnpm -C client cypress:run",
    "verify:public-env": "node scripts/verify-public-env.mjs",
    "verify": "pnpm -w run typecheck && pnpm -w run lint && pnpm -w run test && pnpm -w run build",
    "test": "turbo test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "validate:packages": "node scripts/validate-packages.mjs",
    "validate:env": "node scripts/validate-env.mjs",
    "validate:env:prod": "node scripts/validate-env.mjs --production",
    "precommit": "lint-staged",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "package.json": [
      "node scripts/validate-packages.mjs"
    ],
    "**/package.json": [
      "node scripts/validate-packages.mjs"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "drizzle-kit": "^0.30.4",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.7.6",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "overrides": {
      "drizzle-zod": "0.7.0",
      "path-to-regexp": ">=8.0.0",
      "cookie": ">=0.7.0",
      "send": ">=0.19.0",
      "serve-static": ">=1.16.0"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "cypress"
    ]
  },
  "dependencies": {
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "0.7.0",
    "expo-auth-session": "~7.0.10",
    "expo-crypto": "~15.0.8",
    "expo-web-browser": "~15.0.10",
    "pg": "^8.17.2",
    "zod": "3.23.8"
  }
}
