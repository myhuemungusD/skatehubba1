{
  "name": "skatehubba-monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently \"pnpm --filter ./client dev\" \"pnpm --filter ./server dev\"",
    "start": "tsx server/index.ts",
    "build": "pnpm --filter ./shared build && pnpm --filter ./client build && pnpm --filter ./server build && pnpm run package:dist",
    "build:ci": "pnpm install --frozen-lockfile && pnpm build",
    "check": "pnpm -r run typecheck",
    "package:dist": "node scripts/assemble-dist.mjs",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lockfile:check": "pnpm install --frozen-lockfile --ignore-scripts",
    "precommit:deps": "echo '⚠️  If you changed any package.json, run: pnpm install && git add pnpm-lock.yaml'"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@vitest/coverage-v8": "^4.0.17",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "globals": "^17.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "pnpm": {
    "overrides": {
      "zod": "3.23.8",
      "drizzle-zod": "0.7.0",
      "path-to-regexp": ">=8.0.0",
      "cookie": ">=0.7.0",
      "send": ">=0.19.0",
      "serve-static": ">=1.16.0"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "@firebase/util",
      "protobufjs"
    ]
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "pg": "^8.16.3"
  }
}
